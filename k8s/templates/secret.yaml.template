apiVersion: v1
kind: Secret
metadata:
  name: acm-agent-secrets
  namespace: acm-agent
type: Opaque
stringData:
  # REPLACE WITH YOUR ACTUAL VALUES
  openai-api-key: "YOUR_OPENAI_API_KEY_HERE"
  mcp-bearer-token: "YOUR_MCP_BEARER_TOKEN_HERE"

---
apiVersion: v1
kind: Secret
metadata:
  name: proxy-secret
  namespace: acm-agent
type: Opaque
stringData:
  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
  session_secret: "REPLACE_WITH_GENERATED_SECRET"

# Note: acm-agent-tls secret is automatically created by OpenShift Service CA
# due to the service.beta.openshift.io/serving-cert-secret-name annotation
# on the acm-agent service. Do not manually create this secret.